<%- include('includes/head') %>
  <!--Recebe o cabeçalho  de outro arquivo (/includes/head)-->

  <%- include('includes/nav') %>
    <!--Recebe a barra de navegação de outro arquivo(/includes/nav)-->

    <div class="container">


      <h1 class="admin_title">
        Página do Administrador
      </h1>

      <p>
        Consegue criar novos administradores
      </p>

      <%- include('includes/messages')%>

        <div class="admin_content">

          <div class="admin_criarConta">
            <h4>Criar conta de acesso</h4>
            <p>Para criar novo usuário , preencha o formulário abaixo:</p>

            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%=csrfToken%>>
              <div class="form-group">
                <label>E-mail</label>
                <input type="email" class="form-control" name="email">
              </div>

              <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <br>
              <div class="form-group">

                <label>Cargo</label><br>
                <input type="radio" name="cargo" value="User">
                <label for="User">User</label><br>
              </div>
              <br>
              <button type="submit" class="btn btn-primary">Criar conta</button>

            </form>

          </div>
        </div>

    </div>

    </div>
    <!--Fim do Conteúdo-->

    </div>

    <%- include('includes/footer') %>