<%- include('includes/head') %>
  <!--Recebe o cabeçalho  de outro arquivo (/includes/head)-->

  <%- include('includes/nav') %>
    <!--Recebe a barra de navegação de outro arquivo(/includes/nav)-->

    <div class="container">
      <div class="row">
        <div class="col-lg-3"></div>
        <!--borda da Página -->

        <div class="col-lg-6 my-3">
          <h1 class=" text-center">
            Criar conta ou Entrar
          </h1>
          <p class="text-center lead">
            Faça login ou crie sua conta abaixo
          </p>

          <%- include('includes/messages')%>

            <div class="row">

              <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>



                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                  <div class="form-group">
                    <label>Seu e-mail</label>
                    <input type="email" class="form-control" name="email">
                  </div>

                  <div class="form-group">
                    <label>Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                  <br>
                  <div class="form-group">

                    <label>Cargo</label><br>
                    <input type="radio" name="cargo" value="Aluno">
                    <label for="html">Aluno</label><br>
                    <input type="radio" name="cargo" value="Professor">
                    <label for="Professor">Professor</label><br>
                    <input type="radio" name="cargo" value="Admin">
                    <label for="Admin">Admin</label><br>
                  </div>

                  <br />
                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
              </div>
            </div>

        </div>
        <!--Fim do Conteúdo-->

        <div class="col-lg-3"></div>
        <!--borda da Página -->
      </div>

      <%- include('includes/footer') %>