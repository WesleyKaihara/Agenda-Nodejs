<%- include('includes/head') %>
  <!--Recebe o cabeçalho  de outro arquivo (/includes/head)-->

  <%- include('includes/nav') %>
    <!--Recebe a barra de navegação de outro arquivo(/includes/nav)-->

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <!--borda da Página -->

        <div class="col-lg-8 my-3">
          <h1 class=" text-center">
            Painel do Aluno
          </h1>
          <p class="text-center lead">
            Faça login com seu email Institucional
          </p>

          <%- include('includes/messages')%>

            <div class="row">

              <div class="col-lg">
                <h4>Login</h4>
                <p>Se você não possui um email, entrar em contato com a instituição:</p>

                <form action="/services" method="POST">

                  <input type="hidden" name="_csrf" value=<%=csrfToken%>>

                  <div class="form-group">
                    <label>Seu e-mail</label>
                    <input type="email" class="form-control" name="email">
                  </div>

                  <div class="form-group">
                    <label>Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>

                  <br />
                  <button type="submit" class="btn btn-primary">Entrar</button>
                </form>

              </div>

            </div>


        </div>
        <!--Fim do Conteúdo-->

        <div class="col-lg-2"></div>
        <!--borda da Página -->
      </div>

      <%- include('includes/footer') %>